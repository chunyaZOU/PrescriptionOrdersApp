<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/text_light_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="支付方式" />


    <sy.pay.view.flowlayout.FlowLayout xmlns:f="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flPayWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        f:horizontalSpacing="10dp"
        f:orientation="horizontal"
        f:verticalSpacing="15dp">


    </sy.pay.view.flowlayout.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_window" />

    <TextView
        style="@style/text_light_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="支付状态" />

    <sy.pay.view.flowlayout.FlowLayout xmlns:f="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flPayState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        f:horizontalSpacing="10dp"
        f:orientation="horizontal"
        f:verticalSpacing="15dp">

    </sy.pay.view.flowlayout.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_window" />

    <TextView
        style="@style/text_light_16"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="其他类型" />

    <sy.pay.view.flowlayout.FlowLayout xmlns:f="http://schemas.android.com/apk/res-auto"
        android:id="@+id/flOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        f:horizontalSpacing="10dp"
        f:orientation="horizontal"
        f:verticalSpacing="15dp">

    </sy.pay.view.flowlayout.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvReset"
            style="@style/text_light_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/count_title_left_white_bg"
            android:padding="10dp"
            android:text="重置"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tvConfirm"
            style="@style/text_white_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:background="@drawable/count_title_right_blue_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>