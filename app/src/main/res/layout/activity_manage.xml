<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_window"
    tools:context="com.sy.prescription.DeviceManageActivity">

    <include layout="@layout/header_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSignIn"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/sign_red"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_sign"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="签到" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            android:id="@+id/tvSignOut"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_out_yellow"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_signout"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="签退" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />
        <TextView
            android:id="@+id/tvJiesuan"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:textColor="@color/select_blue"
            android:drawableTop="@drawable/icon_jiesuan"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="结算" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMember"
            style="@style/text_black_14"
            android:textColor="@color/member_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_member"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="柜员管理" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            android:id="@+id/tvSelect"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:textColor="@color/select_blue"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_select"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="交易查询" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            android:id="@+id/tvLockDevice"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:textColor="@color/sign_red"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_lock_device"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="锁定终端" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVersion"
                style="@style/text_black_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:textColor="@color/select_blue"
                android:drawableTop="@drawable/icon_version"
                android:gravity="center"
                android:background="@color/white"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="版本" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/background_window" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_consume"
            android:gravity="center"
            android:padding="25dp"
            android:text="消费"
            android:visibility="invisible" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window"
            android:visibility="invisible" />

        <TextView
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_consume"
            android:gravity="center"
            android:padding="25dp"
            android:text="消费"
            android:visibility="invisible" />

    </LinearLayout>


</LinearLayout>
