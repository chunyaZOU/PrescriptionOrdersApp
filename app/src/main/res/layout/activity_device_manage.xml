<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_window"
    android:orientation="vertical"
    tools:context="com.sy.prescription.DeviceManageActivity">

    <include layout="@layout/header_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConsume"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_consume"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="消费"
            android:textColor="@color/sign_red" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView

            android:id="@+id/tvPrint"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_print"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="打印"
            android:textColor="@color/select_blue" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            android:id="@+id/tvManage"
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_manage"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="管理"
            android:textColor="@color/member_green" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/background_window"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvConsumeBack"
                style="@style/text_black_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_consume_back"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="消费撤销"
                android:textColor="@color/sign_out_yellow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_window" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_window"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGoodsBack"
                style="@style/text_black_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_goods_back"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="退货"
                android:textColor="@color/select_blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_window" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/background_window" />

        <TextView
            style="@style/text_black_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_consume"
            android:gravity="center"
            android:padding="25dp"
            android:text="消费"
            android:visibility="invisible" />

    </LinearLayout>


</LinearLayout>
