<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context="com.sy.prescription.OrderQueryActivity">

    <include layout="@layout/header_view" />
    <TextView
        style="@style/text_white_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="请输入或者扫描票据码" />

    <EditText
        android:id="@+id/etOrderId"
        style="@style/text_gray_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:background="@drawable/order_query_edittext_bg"
        android:gravity="center"
        android:padding="10dp" />
    <TextView
        android:id="@+id/tvState"
        style="@style/text_white_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="" />
</LinearLayout>
